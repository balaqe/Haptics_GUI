<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Haptics_GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Haptics_GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Haptics_GUI">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        
    <StackPanel HorizontalAlignment="Center">
        <TextBox Name="OpenFileTextBox" Text="{Binding FilePath}"></TextBox>
        <Button Name="OpenFileButton" Content="Open file" HorizontalAlignment="Stretch"></Button> 
        <Button Name="PlayFileButton" Content="Play file" Command="{Binding PlayFile}" HorizontalAlignment="Stretch"></Button>
        <Button Name="StopFileButton" Content="Stop playing file" Command="{Binding StopFile}" HorizontalAlignment="Stretch"></Button>
        <Button Name="PlayGenFileButton" Content="Play Generated File" Command="{Binding PlayGenFile}" HorizontalAlignment="Stretch"></Button>
        <Button Name="PauseGenFileButton" Content="Pause Generated File" Command="{Binding PauseGenFile}" HorizontalAlignment="Stretch"></Button>
        <Button Name="StopGenFileButton" Content="Stop Generated File" Command="{Binding StopGenFile}" HorizontalAlignment="Stretch"></Button>
        <Button Name="DisposeGenFileButton" Content="Dispose Generated File" Command="{Binding DisposeGenFile}" HorizontalAlignment="Stretch"></Button>
    </StackPanel>
    
    <StackPanel>
        <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Sine waves" FontWeight="Bold" Margin="5"></TextBlock>
                <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*" Margin="5">
                    <Border Grid.Column="0" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
        
        <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Square waves" FontWeight="Bold" Margin="5"></TextBlock>
                <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*" Margin="5">
                    <Border Grid.Column="0" Grid.Row="0" Margin="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <TextBlock Text="helhehhlo" ></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="0" Margin="5">
                        <TextBox Text="helllllooooooooooigfjsakjfkasdfkjaskldf"></TextBox>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
    </StackPanel>

</Window>
