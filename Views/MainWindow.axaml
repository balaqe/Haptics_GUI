<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Haptics_GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Haptics_GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Haptics_GUI">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />      <!-- Center column -->
                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
            </Grid.ColumnDefinitions>


            <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="100">
                <RadioButton Content="Refreshing" Margin="5" IsChecked="{Binding Refreshing}"/>
                <RadioButton Content="Alarming" Margin="5" IsChecked="{Binding Alarming}"/>
            </StackPanel>


            <StackPanel>
                <StackPanel HorizontalAlignment="Center">
                    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />      <!-- Center column -->
                                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Find Pulse Count" FontSize="20" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="1" Margin="5" IsChecked="{Binding Count1}"/>
                                    <RadioButton Content="3" Margin="5" IsChecked="{Binding Count2}"/>
                                    <RadioButton Content="5" Margin="5" IsChecked="{Binding Count3}"/>
                                </StackPanel>
                                <TextBlock Text="Adjust Count" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding PulseCount, Mode=TwoWay}" Margin="10"/>
                                    <TextBlock Text="Custom" VerticalAlignment="Center"/>
                                    <CheckBox VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="PLAY"
                                    Width="100"
                                    Height="50"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Command="{Binding FindAlarmCount}"
                                    />
                        </Grid>
                    </Border>

                    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />      <!-- Center column -->
                                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Find Frequency" FontSize="20" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="100 Hz" Margin="5" IsChecked="{Binding Freq1}"/>
                                    <RadioButton Content="125 Hz" Margin="5" IsChecked="{Binding Freq2}"/>
                                    <RadioButton Content="75 Hz" Margin="5" IsChecked="{Binding Freq3}"/>
                                </StackPanel>
                                <TextBlock Text="Adjust Frequency" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding Frequency, Mode=TwoWay}" Margin="10"/>
                                    <TextBlock Text="Custom" VerticalAlignment="Center"/>
                                    <CheckBox VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="PLAY"
                                    Width="100"
                                    Height="50"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Command="{Binding FindFreq}"
                                    />
                        </Grid>
                    </Border>

                    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />      <!-- Center column -->
                                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Find Pulse Delay" FontSize="20" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="0.2" Margin="5" IsChecked="{Binding PulseDelay1}"/>
                                    <RadioButton Content="0.3" Margin="5" IsChecked="{Binding PulseDelay2}"/>
                                    <RadioButton Content="0.1" Margin="5" IsChecked="{Binding PulseDelay3}"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="PLAY"
                                    Width="100"
                                    Height="50"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Command="{Binding FindPulseDelay}"
                                    />
                        </Grid>
                    </Border>

                    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />      <!-- Center column -->
                                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
                            </Grid.ColumnDefinitions>

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Find Sweep" FontSize="20" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="1. Low 25 to Control" Margin="5" IsChecked="{Binding Sweep1}"/>
                                    <RadioButton Content="2. High 25 to Control" Margin="5" IsChecked="{Binding Sweep2}"/>
                                    <RadioButton Content="3. Control to Low 25" Margin="5" IsChecked="{Binding Sweep3}"/>
                                    <RadioButton Content="4. Control to High 25" Margin="5" IsChecked="{Binding Sweep4}"/>
                                </StackPanel> 
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <CheckBox Margin="10"/> <!-- Visual aid for logging the rounds-->
                                    <CheckBox Margin="10"/>
                                    <CheckBox Margin="10"/>
                                    <CheckBox Margin="10"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <CheckBox Margin="10"/>
                                    <CheckBox Margin="10"/>
                                    <CheckBox Margin="10"/>
                                    <CheckBox Margin="10"/>
                                </StackPanel>
                                <!-- <StackPanel Orientation="Horizontal">
                                    <StackPanel>
                                        <TextBlock Text="Start Time" Margin="5" HorizontalAlignment="Center"/>
                                        <TextBox Text="{Binding}" Margin="5"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="End Time" Margin="5" HorizontalAlignment="Center"/>
                                        <TextBox Text="{Binding}" Margin="5"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Start Freq" Margin="5" HorizontalAlignment="Center"/>
                                        <TextBox Text="{Binding}" Margin="5"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="End Freq" Margin="5" HorizontalAlignment="Center"/>
                                        <TextBox Text="{Binding}" Margin="5"/>
                                    </StackPanel>
                                </StackPanel> -->
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="PLAY"
                                    Width="100"
                                    Height="50"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Command="{Binding FindSweep}"
                                    />

                        </Grid>
                    </Border>


                    <Border Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="7">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />      <!-- Center column -->
                                <ColumnDefinition Width="Auto" />   <!-- Right column for the button -->
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Find Phase Mismatch" FontSize="20" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="Sync" Margin="5" IsChecked="{Binding Phase1}"/>
                                    <RadioButton Content="1/8 offset" Margin="5" IsChecked="{Binding Phase2}"/>
                                    <RadioButton Content="1/4 offset" Margin="5" IsChecked="{Binding Phase3}"/>
                                    <RadioButton Content="Out of phase" Margin="5" IsChecked="{Binding Phase4}"/>
                                    <RadioButton Content="Randomize" Margin="5"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Adjust Phases" Margin="5" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBox Text="" Margin="5"/>
                                        <TextBox Text="" Margin="5"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="PLAY"
                                    Width="100"
                                    Height="50"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Command="{Binding FindPhase}"
                                    />
                        </Grid>
                    </Border>
                    
                </StackPanel>

            </StackPanel>

        </Grid>

        <Border VerticalAlignment="Bottom" Margin="5" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Channels" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Margin="10" Text="{Binding Channel1}"/>
                            <TextBox Margin="10" Text="{Binding Channel2}"/>
                        </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Window>
